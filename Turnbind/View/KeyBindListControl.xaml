<UserControl x:Class="Turnbind.View.KeyBindListControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:viewModel="clr-namespace:Turnbind.ViewModel"
        xmlns:view="clr-namespace:Turnbind.View" mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="400"
        d:DataContext="{d:DesignInstance viewModel:KeyBindListViewModel}">
    <DockPanel Grid.Column="1">
        <Border BorderBrush="Gray" BorderThickness="1" DockPanel.Dock="Bottom" Margin="0,5,0,0">
            <view:KeyBindEditControl x:Name="KeyBindEdit" />
        </Border>

        <Border BorderBrush="Gray" BorderThickness="1" DockPanel.Dock="Top" Margin="0,0,0,5">
            <ListView ItemsSource="{Binding KeyBinds, Mode=OneWay}" BorderThickness="10" BorderBrush="Black"
                    SelectedValue="{Binding Selected}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="100" Header="Dir"
                                DisplayMemberBinding="{Binding Path=TurnSetting.Dir,Mode=OneWay}" />
                        <GridViewColumn Width="100" Header="Pix/Sec"
                                DisplayMemberBinding="{Binding Path=TurnSetting.PixelPerSec,Mode=OneWay}" />
                        <GridViewColumn Width="200" Header="Keys"
                                DisplayMemberBinding="{Binding Path=KeysString,Mode=OneWay}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>
    </DockPanel>
</UserControl>
