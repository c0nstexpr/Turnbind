<UserControl x:Class="Turnbind.View.KeyBindsControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:viewModel="clr-namespace:Turnbind.ViewModel"
        xmlns:view="clr-namespace:Turnbind.View" mc:Ignorable="d" d:DesignHeight="500" d:DesignWidth="800"
        d:DataContext="{d:DesignInstance Type=viewModel:KeyBindsViewModel}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <view:ProfileControl x:Name="Profile" Margin="5" />

        <view:KeyBindListControl x:Name="KeyBindList" Grid.Column="1" Margin="5" />
    </Grid>
</UserControl>
