<Window x:Class="Turnbind.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:Turnbind"
        mc:Ignorable="d" Title="MainWindow" Height="450" Width="800"
        d:DataContext="{d:DesignInstance Type=local:MainWindow}">
    <DockPanel>
        <StackPanel DockPanel.Dock="Left">
            <DockPanel HorizontalAlignment="Left">
                <Label Content="process name:" VerticalAlignment="Center" />
                <TextBox Width="200" Height="20" Margin="10" BorderThickness="1" Text="{Binding ProcessName}" />
            </DockPanel>

        </StackPanel>


    </DockPanel>
</Window>
