<Window x:Class="Turnbind.View.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:Turnbind.ViewModel" xmlns:view="clr-namespace:Turnbind.View" mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500"
        d:DataContext="{d:DesignInstance Type=viewModel:MainWindowViewModel}">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top" HorizontalAlignment="Center">
            <Label Content="Process Name:" VerticalAlignment="Center" />
            <TextBox VerticalContentAlignment="Center" Width="200" Height="25" Margin="10" BorderThickness="1" Text="{Binding ProcessName}" />
        </DockPanel> 
        
        <DockPanel DockPanel.Dock="Top" HorizontalAlignment="Center">
            <Label Content="Window State:" VerticalAlignment="Center" />
            <Label VerticalContentAlignment="Center" Width="200" Height="25" Margin="10" BorderThickness="1" Content="{Binding IsWindowFocused}" />
        </DockPanel> 
        
        <DockPanel DockPanel.Dock="Top" HorizontalAlignment="Center">
            <Label Content="Current Keys:" VerticalAlignment="Center" />
            <Label VerticalContentAlignment="Center" Width="200" Height="25" Margin="10" BorderThickness="1" Content="{Binding CurrentKeyStr, Mode=OneWay}" />
        </DockPanel>

        <view:KeyBindsControl x:Name="TurnBindControl"/>
    </DockPanel>
</Window>
