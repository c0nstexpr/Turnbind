<UserControl x:Class="Turnbind.View.ProfileControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:viewModel="clr-namespace:Turnbind.ViewModel"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" xmlns:system="clr-namespace:System;assembly=netstandard"
        mc:Ignorable="d" d:DesignHeight="400" d:DesignWidth="400"
        d:DataContext="{d:DesignInstance viewModel:ProfileControlViewModel}">
    <DockPanel>
        <Grid DockPanel.Dock="Bottom" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <ui:TextBox Margin="10" PlaceholderText="Profile name..." Text="{Binding TextBoxProfileName}" />

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <ui:Button Margin="10" Content="Add" Click="AddButtonClick" HorizontalAlignment="Stretch"
                        Appearance="Primary" IsEnabled="{Binding AddButtonEnable, Mode=OneWay}" />

                <ui:Button Grid.Column="1" Click="RemoveButtonClick" HorizontalAlignment="Stretch" Margin="10"
                        Content="Remove" IsEnabled="{Binding RemoveButtonEnable, Mode=OneWay}" />
            </Grid>
        </Grid>

        <ListView ItemsSource="{Binding ProfilesNames, Mode=OneWay}" SelectedItem="{Binding SelectedProfileName}">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <EventSetter Event="MouseDoubleClick" Handler="ProfileNameListDoubleClick" />
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate DataType="{x:Type system:String}">
                    <TextBlock Margin="10" Text="{Binding}" />
                </DataTemplate>
            </ListView.ItemTemplate>

            <d:ListView.ItemsSource>
                <x:Array Type="{x:Type system:String}">
                    <system:String>default</system:String>
                    <system:String>custom</system:String>
                </x:Array>
            </d:ListView.ItemsSource>
        </ListView>

    </DockPanel>
</UserControl>
