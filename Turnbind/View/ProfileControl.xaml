<UserControl x:Class="Turnbind.View.ProfileControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:viewModel="clr-namespace:Turnbind.ViewModel"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" mc:Ignorable="d" d:DesignHeight="400" d:DesignWidth="400"
        d:DataContext="{d:DesignInstance viewModel:ProfileControlViewModel}">
    <DockPanel>
        <Grid DockPanel.Dock="Bottom" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <ui:TextBox Margin="10" PlaceholderText="Profile name..." Text="{Binding TextBoxProfileName}" />

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <ui:Button Margin="10" Content="Add" Command="{Binding AddProfileNameCommand}"
                        HorizontalAlignment="Stretch" Appearance="Primary" />

                <ui:Button Margin="10" Grid.Column="1" Content="Remove" Command="{Binding RemoveProfileNameCommand}"
                        HorizontalAlignment="Stretch" />
            </Grid>
        </Grid>

        <ListView ItemsSource="{Binding ProfilesNames, Mode=OneWay}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <CheckBox IsChecked="{Binding Enable}" Content="{Binding ProfileName}"
                            d:DataContext="{d:DesignInstance viewModel:ProfileNameItemViewModel}">
                    </CheckBox>
                </DataTemplate>
            </ListView.ItemTemplate>

            <d:ListView.ItemsSource>
                <x:Array Type="{x:Type viewModel:ProfileNameItemViewModel}">
                    <viewModel:ProfileNameItemViewModel ProfileName="default" />
                    <viewModel:ProfileNameItemViewModel ProfileName="custom" />
                </x:Array>
            </d:ListView.ItemsSource>
        </ListView>

    </DockPanel>
</UserControl>
