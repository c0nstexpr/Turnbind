<UserControl x:Class="Turnbind.View.TurnBindControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:viewModel="clr-namespace:Turnbind.ViewModel"
        mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="800"
        d:DataContext="{d:DesignInstance Type=viewModel:TurnBindViewModel}">
    <StackPanel Orientation="Horizontal" Margin="10" MinWidth="200">
        

        <DockPanel>


            <ListView Margin="5" DockPanel.Dock="Top" ItemsSource="{Binding Binds, Mode=OneTime}"
                    SelectedIndex="{Binding FocusedBindingIndex}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="100" Header="Dir" DisplayMemberBinding="{Binding Path=Dir}" />
                        <GridViewColumn Width="100" Header="Pix/Sec" DisplayMemberBinding="{Binding Path=PixelPerSec}" />
                        <GridViewColumn Width="200" Header="Keys" DisplayMemberBinding="{Binding Path=KeysString}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </DockPanel>
    </StackPanel>
</UserControl>
